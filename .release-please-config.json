{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "go",
  "bump-minor-pre-major": true,
  "handleGHRelease": true,
  "extra-files": [
    {
      "type": "json",
      "path": "package.json",
      "jsonpath": "$.version"
    },
    {
      "type": "json",
      "path": "package-lock.json",
      "jsonpath": "$.version"
    }
  ]
}
