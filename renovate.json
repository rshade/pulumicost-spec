{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)"
  ],
  "schedule": ["before 4am on monday"],
  "timezone": "UTC",
  "packageRules": [
    {
      "matchPackagePatterns": ["^google\\.golang\\.org/"],
      "groupName": "gRPC and protobuf dependencies",
      "groupSlug": "grpc-protobuf"
    },
    {
      "matchPackagePatterns": ["^github\\.com/"],
      "groupName": "GitHub dependencies",
      "groupSlug": "github-deps"
    },
    {
      "matchPackagePatterns": ["^golang\\.org/x/"],
      "groupName": "Go x packages",
      "groupSlug": "go-x-packages"
    },
    {
      "matchPackagePatterns": ["^buf\\.build/"],
      "groupName": "Buf dependencies",
      "groupSlug": "buf-deps"
    }
  ],
  "enabledManagers": ["gomod"],
  "gomod": {
    "enabled": true,
    "postUpdateOptions": ["gomodTidy"]
  },
  "ignorePaths": [
    "examples/**"
  ],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "rangeStrategy": "bump",
  "commitMessageAction": "Update",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newVersion}}",
  "commitMessagePrefix": "chore(deps):",
  "commitMessageSuffix": "",
  "recreateClosed": false,
  "rebaseWhen": "auto",
  "rebaseLabel": "rebase",
  "assignees": [],
  "reviewers": [],
  "labels": ["dependencies", "renovate"],
  "assignAutomerge": false,
  "automerge": false,
  "automergeType": "pr",
  "automergeStrategy": "auto",
  "platformAutomerge": false,
  "hostRules": [],
  "onboarding": true,
  "requireConfig": false,
  "onboardingConfig": {
    "extends": ["config:base"]
  },
  "configMigration": true,
  "binarySource": "global",
  "cacheDir": "/tmp/renovate/cache",
  "baseDir": "/tmp/renovate/repos",
  "gitAuthor": "Renovate Bot <bot@renovateapp.com>"
}
