{
  "metadata": {
    "name": "azure-cost-plugin",
    "version": "1.3.2",
    "description": "Microsoft Azure cost source plugin with support for VMs, Storage, SQL Database, and App Services pricing",
    "author": "Azure Community",
    "homepage": "https://github.com/pulumicost-community/azure-plugin",
    "repository": "https://github.com/pulumicost-community/azure-plugin",
    "license": "MIT",
    "keywords": ["azure", "cost", "vm", "storage", "sql", "appservice"],
    "created_at": "2024-02-01T08:00:00Z",
    "updated_at": "2024-03-18T16:45:00Z"
  },
  "specification": {
    "spec_version": "0.1.0",
    "supported_providers": ["azure"],
    "supported_resources": {
      "azure": {
        "resource_types": ["vm", "storage", "sql-database", "app-service"],
        "billing_modes": [
          "per_hour", "per_second", "per_gb_month", 
          "per_dtu", "per_month"
        ],
        "regions": [
          "eastus", "westus2", "northeurope", "southeastasia"
        ]
      }
    },
    "capabilities": [
      "cost_retrieval", "cost_projection", "pricing_specs", "historical_data"
    ],
    "service_definition": {
      "service_name": "CostSourceService",
      "package_name": "pulumicost.v1",
      "methods": ["Name", "Supports", "GetActualCost", "GetProjectedCost", "GetPricingSpec"],
      "port": 50052,
      "health_check_path": "/azure/health"
    },
    "observability_support": {
      "metrics_enabled": true,
      "tracing_enabled": false,
      "logging_enabled": true,
      "health_checks_enabled": true,
      "sli_support": false
    }
  },
  "security": {
    "security_level": "community",
    "permissions": [
      "network_access", "config_read"
    ],
    "sandbox_required": false
  },
  "installation": {
    "installation_method": "container",
    "download_url": "registry.hub.docker.com/pulumicost/azure-plugin:1.3.2",
    "checksum": "b2c3d4e5f6789012345678901234567890abcdef1234567890abcdef12345678",
    "checksum_algorithm": "sha256"
  },
  "configuration": {
    "schema": "{\"type\":\"object\",\"required\":[\"subscription_id\",\"client_id\",\"client_secret\",\"tenant_id\"],\"properties\":{\"subscription_id\":{\"type\":\"string\"},\"client_id\":{\"type\":\"string\"},\"client_secret\":{\"type\":\"string\"},\"tenant_id\":{\"type\":\"string\"},\"timeout\":{\"type\":\"integer\",\"default\":30}}}",
    "default_config": "{\"timeout\":30}",
    "required_fields": ["subscription_id", "client_id", "client_secret", "tenant_id"],
    "examples": [
      {
        "name": "service_principal_config",
        "description": "Configuration using Azure Service Principal authentication",
        "config": "{\"subscription_id\":\"12345678-1234-1234-1234-123456789012\",\"client_id\":\"abcdef12-3456-7890-abcd-ef1234567890\",\"client_secret\":\"your-client-secret\",\"tenant_id\":\"87654321-4321-4321-4321-210987654321\"}"
      }
    ]
  },
  "requirements": {
    "min_spec_version": "0.1.0",
    "max_spec_version": "0.1.0",
    "system_requirements": {
      "min_memory_mb": 256,
      "min_disk_mb": 50,
      "supported_architectures": ["x86_64"],
      "supported_os": ["linux", "windows"]
    },
    "runtime_requirements": {
      "grpc_version": "1.48.0",
      "tls_required": true,
      "auth_methods": ["oauth2"],
      "timeout_seconds": 30
    }
  }
}