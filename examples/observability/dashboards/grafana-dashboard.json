{
  "dashboard": {
    "id": null,
    "title": "PulumiCost Plugin Observability",
    "description": "Comprehensive monitoring dashboard for PulumiCost plugins",
    "tags": ["pulumicost", "observability", "cost-management"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "hideControls": false,
    "graphTooltip": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Service Health Overview",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{job=\"pulumicost-plugin\"}",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "displayMode": "basic",
              "orientation": "horizontal"
            },
            "mappings": [
              {"options": {"0": {"text": "Down"}}, "type": "value"},
              {"options": {"1": {"text": "Up"}}, "type": "value"}
            ],
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 9, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "rate(pulumicost_requests_total[5m])",
            "legendFormat": "{{method}} - {{provider}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec",
            "min": 0
          },
          {
            "show": false
          }
        ],
        "legend": {
          "show": true,
          "values": true,
          "current": true
        }
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "singlestat",
        "gridPos": {"h": 8, "w": 3, "x": 15, "y": 0},
        "targets": [
          {
            "expr": "rate(pulumicost_errors_total[5m]) / rate(pulumicost_requests_total[5m]) * 100",
            "refId": "A"
          }
        ],
        "valueName": "current",
        "valueFontSize": "50%",
        "postfix": "%",
        "thresholds": "0.1,1",
        "colorBackground": true,
        "colors": ["#299c46", "#e5ac0e", "#d44a3a"]
      },
      {
        "id": 4,
        "title": "Latency Distribution",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(pulumicost_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(pulumicost_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(pulumicost_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "Duration (seconds)",
            "min": 0
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 5,
        "title": "Cache Hit Rate",
        "type": "singlestat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "avg(pulumicost_cache_hit_rate_percent)",
            "refId": "A"
          }
        ],
        "valueName": "current",
        "valueFontSize": "50%",
        "postfix": "%",
        "thresholds": "70,90",
        "colorBackground": true,
        "colors": ["#d44a3a", "#e5ac0e", "#299c46"]
      },
      {
        "id": 6,
        "title": "Active Connections",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "pulumicost_active_connections",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Connections",
            "min": 0
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 7,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "pulumicost_memory_usage_bytes / 1024 / 1024",
            "legendFormat": "Memory (MB)",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Memory (MB)",
            "min": 0
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 8,
        "title": "Top Errors by Type",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "topk(5, rate(pulumicost_errors_total[5m]))",
            "legendFormat": "{{error_type}} - {{method}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Errors/sec",
            "min": 0
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 9,
        "title": "Data Source Latency",
        "type": "graph",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "avg(pulumicost_data_source_latency_seconds) by (provider)",
            "legendFormat": "{{provider}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Latency (seconds)",
            "min": 0
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 10,
        "title": "SLA Compliance",
        "type": "table",
        "gridPos": {"h": 8, "w": 18, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "pulumicost_sli_availability",
            "legendFormat": "Availability",
            "refId": "A",
            "format": "table"
          },
          {
            "expr": "pulumicost_sli_error_rate",
            "legendFormat": "Error Rate",
            "refId": "B",
            "format": "table"
          },
          {
            "expr": "pulumicost_sli_latency_p95",
            "legendFormat": "P95 Latency",
            "refId": "C",
            "format": "table"
          }
        ],
        "styles": [
          {
            "pattern": "Value",
            "type": "number",
            "unit": "percent",
            "decimals": 2,
            "colorMode": "cell",
            "thresholds": ["95", "99"]
          }
        ]
      }
    ],
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(pulumicost_requests_total, instance)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        },
        {
          "name": "provider",
          "type": "query", 
          "query": "label_values(pulumicost_requests_total, provider)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "prometheus",
          "expr": "changes(up{job=\"pulumicost-plugin\"}[1m])",
          "titleFormat": "Deployment",
          "textFormat": "Instance {{instance}} changed state"
        }
      ]
    }
  }
}