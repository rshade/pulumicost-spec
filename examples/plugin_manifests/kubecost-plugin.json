    "repository": "https://github.com/pulumicost/kubecost-plugin",
    "release_notes_url": "https://github.com/pulumicost/kubecost-plugin/releases/tag/v1.2.3",
    "created": "2024-01-15T10:30:00Z",
    "updated": "2024-08-30T14:22:00Z"
  }
}