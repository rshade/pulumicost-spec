{
  "name": "@pulumicost/spec",
  "version": "0.4.2",
  "description": "Production-ready specification for cloud cost source plugins with gRPC protocol, JSON schemas, and Go SDK",
  "keywords": [
    "pulumi",
    "cost-management",
    "cloud-costs",
    "grpc",
    "protobuf",
    "aws",
    "azure",
    "gcp",
    "kubernetes",
    "pricing",
    "billing",
    "finops"
  ],
  "homepage": "https://github.com/rshade/pulumicost-spec",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rshade/pulumicost-spec.git"
  },
  "bugs": {
    "url": "https://github.com/rshade/pulumicost-spec/issues"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "rshade",
    "url": "https://github.com/rshade"
  },
  "main": "schemas/pricing_spec.schema.json",
  "files": [
    "schemas/",
    "examples/",
    "proto/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "lint:markdown": "markdownlint-cli2",
    "lint:markdown:fix": "markdownlint-cli2 --fix",
    "lint:yaml": "yamllint .github/",
    "validate:schema": "npx ajv compile --spec=draft2020 --all-errors --strict=false -s schemas/pricing_spec.schema.json",
    "validate:registry-schema": "npx ajv compile --spec=draft2020 --all-errors --strict=false -s schemas/plugin_registry.schema.json",
    "validate:examples": "node validate_examples.js",
    "validate:registry": "npx ajv validate --spec=draft2020 --all-errors --strict=false -s schemas/plugin_registry.schema.json -d examples/registry.json",
    "validate": "npm run validate:schema && npm run validate:registry-schema && npm run validate:examples && npm run validate:registry",
    "lint:changelog": "npx keep-a-changelog lint CHANGELOG.md",
    "lint": "npm run lint:markdown && npm run lint:yaml && npm run lint:changelog",
    "test": "npm run validate && npm run lint",
    "format": "npm run lint:markdown:fix",
    "commitlint": "commitlint --edit",
    "commitlint:last": "commitlint --from HEAD~1"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-cli": "^5.0.0",
    "ajv-draft-04": "^1.0.0",
    "ajv-formats": "^3.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/node": "^24.10.1",
    "keep-a-changelog": "^2.7.1",
    "markdownlint-cli2": "^0.19.1",
    "prettier": "^3.7.3",
    "yaml-lint": "^1.7.0"
  },
  "engines": {
    "node": ">=24.11.1",
    "npm": ">=11.6.4"
  },
  "overrides": {
    "fast-json-patch": "^3.1.1"
  }
}
